<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CategoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_coffe"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/coffee" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="58dp"
                android:gravity="center"
                android:text="Coffee"
                android:textColor="#fff"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/image_hospital"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_below="@id/image_coffe"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_coffe"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="Hospital"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/image_resturant"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_below="@id/image_hospital"
                android:background="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hospital"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="Restaurant"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/image_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_resturant"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_resturant"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="School"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_shoping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_school"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_school"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="Shoping"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_shoping"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_shoping"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="Hotels"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image_cinema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hotels"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_hotels"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="47dp"
                android:gravity="center"
                android:text="Cinema"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>