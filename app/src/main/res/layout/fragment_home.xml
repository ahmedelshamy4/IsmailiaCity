<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".9"
    android:background="@drawable/main_logo"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:alpha=".9"
            android:background="@drawable/border_search"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_v"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:alpha=".9"
            app:cardBackgroundColor="#606163"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="109dp"
                    android:layout_marginLeft="109dp"
                    android:paddingTop="10dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    tools:text="Tue" />

                <TextView
                    android:id="@+id/month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_text"
                    android:layout_alignStart="@+id/day_text"
                    android:layout_alignLeft="@+id/day_text"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:textSize="18dp"
                    tools:text="sep 4" />

                <TextView
                    android:id="@+id/temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_text"
                    android:layout_alignLeft="@+id/weather_icon"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="-28dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    tools:text="18*" />

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/temp_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginRight="89dp"
                    android:layout_marginBottom="0dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    tools:text="Cloudy" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/des"
            android:textColor="@color/txtColor"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Ismailia is a city in north eastern Egypt.
  Known in Egypt as The City of Beauty.
  and Enchantment Ismailia is situated on
  the west bank of the Suez Canal,It is
             the captial of the Ismailia
 Govermorate.It is located approximately"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>